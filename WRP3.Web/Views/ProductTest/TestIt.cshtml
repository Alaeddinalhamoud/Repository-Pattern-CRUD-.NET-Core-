@model WRP3.Web.Models.ProductTestModels.ProductTestView
@{
    ViewData["Title"] = $"Test case {@Model?.TestTypeName} For {@Model?.ProductName}";
}

<div class="card">
    <div class="card-header">
        Test case <strong>@Model?.TestTypeName</strong>  For <strong>@Model?.ProductName</strong>
    </div>
    <div class="card-body">
        <form method="post" asp-action="TestIt" asp-controller="ProductTest">
            <input id="Id" name="Id" value="@Model?.ProductTestId" hidden required />
            <input id="ProductId" name="ProductId" value="@Model?.ProductId" hidden required />
            <input id="TestTypeId" name="TestTypeId" value="@Model?.TestTypeId" hidden required />
            <div class="form-group">
                <label>Mark</label>
                <section>
                    <select asp-for="@Model.Mark" name="mark" id="mark" required>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </section>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br/>
        <a class="btn btn-warning float-right" asp-action="ProductTestCases" asp-controller="Product" asp-route-id="@Model?.ProductId">Back to Product Test</a>
    </div>
</div>
