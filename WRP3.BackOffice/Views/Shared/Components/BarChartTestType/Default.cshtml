@model WRP3.BackOffice.Models.ViewComponentModels.BarChartTestType

@if (!string.IsNullOrWhiteSpace(Model.NumberOfTest))
{
    <div class="col mt-2">
        <div class="card p-2">
            <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
        </div>
    </div>
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

<script>
    var xValues = [@Html.Raw(Model.TestNames)];
    var yValues = [@Model?.NumberOfTest];
    var barColors = "orange";

    new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: "Total Number Of Test Type"
            }
        }
    });
</script>
